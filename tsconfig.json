{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "verbatimModuleSyntax": true,
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "src/**/*",
        "old-test-assets/outside-dir/*",
        "old-test-assets/pkg-root/nm/@author/fake-this-pkg/*"
    ]
}